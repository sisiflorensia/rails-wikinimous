<div class="col-8 mx-auto my-3">
    <div class="m-4">
      <div class="d-flex border-bottom py-2 align-items-center">
        <h3 class="mr-4"><%= @article.title %></h3>
        <%= link_to edit_article_path(@article) do %>
          <i class="far fa-edit mr-2"></i>
        <% end %>
        <%= link_to articles_path(@article), method: :delete, data: { confirm: 'Do you really want to delete this task?' }  do %>
          <i class="fas fa-trash-alt mr-2"></i>
        <% end %>
      </div>
      <p class="text-secondary mt-5 mb-4"><%= @article.content %></p>
      <%= link_to articles_path, class:"my-2 py-2 w-25 btn btn-primary" do %>
        <i class="fas fa-redo-alt fa-flip-horizontal mr-2"></i>
        Back to index
      <% end %>
    </div>
</div>
